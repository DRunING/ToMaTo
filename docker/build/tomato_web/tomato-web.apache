<Directory /code>
    Require all granted
</Directory>

WSGIPythonOptimize 1

<VirtualHost *:80>
    ServerAdmin webmaster@localhost

    DocumentRoot /code/web/tomato

    RewriteEngine On
    RewriteCond %{ENV:REDIRECT_STATUS} !=503
    RewriteCond "/config/web.maintenance" -f
    RewriteRule ^(.*)$ /$1 [R=503,L]
    
    Alias /icons /code/web/tomato/icons
    Alias /static /code/web/tomato/static
    Alias /style /code/web/tomato/style
    Alias /img /code/web/tomato/img
    Alias /js /code/web/tomato/js
    Alias /fonts /code/web/tomato/fonts
    Alias /editor_tutorial /code/web/tomato/editor_tutorial
    
    WSGIScriptAlias / /code/web/django.wsgi
</VirtualHost>

<VirtualHost *:443>
    ServerAdmin webmaster@localhost

    SSLEngine on
    SSLCertificateFile    /config/web.pem
    SSLCertificateKeyFile /config/web.pem
    
    DocumentRoot /code/web/tomato

    RewriteEngine On
    RewriteCond %{ENV:REDIRECT_STATUS} !=503
    RewriteCond "/config/web.maintenance" -f
    RewriteRule ^(.*)$ /$1 [R=503,L]
    
    Alias /icons /code/web/tomato/icons
    Alias /static /code/web/tomato/static
    Alias /style /code/web/tomato/style
    Alias /img /code/web/tomato/img
    Alias /js /code/web/tomato/js
    Alias /fonts /code/web/tomato/fonts
    Alias /editor_tutorial /code/web/tomato/editor_tutorial
    
    WSGIScriptAlias / /code/web/django.wsgi
</VirtualHost>
